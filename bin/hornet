var consts = require ('../lib/consts')
  , utils = require("../lib/utils")
  , Hornet = require('../lib/server')
  , settings = {};

if ( process.argv[2].length )
  settings = require( process.argv[2] );

var hornet = new Hornet( settings );

hornet.listen();